<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/waypoint_media_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/waypoint_media_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/waypoint_media_image_divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/trackListItem_background" />

            <LinearLayout
                android:id="@+id/waypoint_media_image_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waypoint_media_image_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:paddingTop="4dp"
                    android:text="@string/waypoint_image_header"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/waypoint_media_image_add_btn"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                <ImageButton
                    android:id="@+id/waypoint_media_image_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/waypoint_media_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <include
                    layout="@layout/waypoint_image"
                    tools:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/waypoint_media_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/waypoint_media_video_divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/trackListItem_background" />

            <LinearLayout
                android:id="@+id/waypoint_media_video_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waypoint_media_video_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="@string/waypoint_video_header"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/waypoint_media_video_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                <ImageButton
                    android:id="@+id/waypoint_media_video_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/waypoint_media_videoview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <include
                    layout="@layout/waypoint_image"
                    tools:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/waypoint_media_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/waypoint_media_audio_divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/trackListItem_background" />

            <LinearLayout
                android:id="@+id/waypoint_media_audio_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waypoint_media_audio_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="@string/waypoint_audio_header"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/waypoint_media_audio_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_add_circle_black_24dp" />

                <ImageButton
                    android:id="@+id/waypoint_media_audio_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/waypoint_media_audioview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <include
                    layout="@layout/waypoint_image"
                    tools:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</merge>