<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/track_distance"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_remove_black_24dp"
        android:drawableStart="@drawable/ic_remove_black_24dp"
        android:text="@string/track_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/MapBottomSheet"
        />

    <TextView
        android:id="@+id/track_elevation"
        android:drawableLeft="@drawable/ic_remove_black_24dp"
        android:drawableStart="@drawable/ic_remove_black_24dp"
        android:text="@string/track_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_distance"
        style="@style/MapBottomSheet"
        />


</androidx.constraintlayout.widget.ConstraintLayout>